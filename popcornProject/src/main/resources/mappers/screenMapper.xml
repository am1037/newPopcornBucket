<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MovieScreenDAO">
    <select id="selectAll" resultType="com.java4.popcorn.crawling.DB.MovieScreenVO">
        select * from popcorn.movie_screen
    </select>
    <insert id="insertOne">
        insert into popcorn.movie_screen
        values(#{title}, #{theater}, #{screen}, #{time}, #{date}, #{theater_id}, #{movie_id})
    </insert>
    <select id="select0513" resultType="com.java4.popcorn.crawling.DB.MovieScreenVO">
        select * from popcorn.movie_screen ms where title like CONCAT('%', #{str1}, '%') and theater_id = #{str2}
    </select>
    <select id="selectByTheater" resultType="com.java4.popcorn.crawling.DB.MovieScreenVO">
        select * from popcorn.movie_screen ms where theater_id = #{theater_id}
    </select>
</mapper>