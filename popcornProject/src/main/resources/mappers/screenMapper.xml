<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MovieScreenDAO">
    <select id="selectAll" resultType="com.java4.popcorn.DB.MovieScreenVO">
        select * from popcorn.movie_screen
    </select>
    <insert id="insertOne">
        insert into popcorn.movie_screen
        values(#{title}, #{theater}, #{screen}, #{time}, #{date}, #{theater_id}, #{movie_id})
    </insert>

    <select id="selectByTheater" resultType="com.java4.popcorn.DB.MovieScreenVO">
        select * from popcorn.movie_screen ms where theater_id = #{theater_id}
    </select>
    <select id="selectByTheaterAndDate" resultType="com.java4.popcorn.DB.MovieScreenVO">
        select * from popcorn.movie_screen ms where theater_id = #{theater_id} and date = #{date}
    </select>



    <insert id="insertOneTheater">
        insert into popcorn.theater
        values(#{theater_company}, #{theater_id} ,#{theater_name}, #{theater_location}, #{theater_region})
    </insert>
    <select id="selectAllTheater" resultType="com.java4.popcorn.DB.TheaterCodeVO">
        select * from popcorn.theater
    </select>
    <select id="selectOneTheater" resultType="com.java4.popcorn.DB.TheaterCodeVO">
        select * from popcorn.theater where theater_id = #{theater_id}
    </select>



    <update id="truncateScreen">
        truncate table popcorn.movie_screen
    </update>

